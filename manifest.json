{
    "name": "CovidCleaner",
    "version": "1.0",
    "description": "A chrome extension to replace all matches of covid19 virus to an emoji",
    "manifest_version": 2,
    "icons": {
        "16": "imgs/icon16.png",
        "32": "imgs/icon32.png",
        "48": "imgs/icon48.png",
        "128": "imgs/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/replace.js"]
        }
    ],
    "permissions": [
        "tabs", "http://*/*"
      ]

}